<%= form_with model: @store, local: false do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'd-block' %>
    <%= f.text_field :name,
          class: render_field_class(@store, :name),
          required: true %>
    <%= render_error_message_for(@store.errors[:name]) %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'd-block' %>
    <%= f.text_area :description,
          class: render_field_class(@store, :description) %>
    <%= render_error_message_for(@store.errors[:description]) %>
  </div>

  <div class="mb-3">
    <%= f.label :avatar, class: 'd-block' %>
    <%= f.file_field :avatar,
          class: render_field_class(@store, :avatar) %>
    <%= render_error_message_for(@store.errors[:avatar]) %>
  </div>

  <div class="mb-3">
    <%= f.submit t(:save), class: 'btn btn-secondary' %>
  </div>
<% end %>