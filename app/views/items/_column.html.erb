<div class="p-1 text-wrap w-25">
  <%= render 'photo', item: item %>

  <h6 class="mb-0">
    <%= link_to item.name, item_path(item) %>
  </h6>
  <div>
    <%= link_to(item.store.name, store_items_path(item.store)) if item.store %>
  </div>
  <div>
    <%= Item.human_attribute_name(:price) %>: <%= item.price %>
  </div>
  <div>
    <%= Item.human_attribute_name(:stock) %>: <%= item.stock %>
  </div>
</div>

<%#= render 'photo_modal', item: item %>