<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, "New password", class: 'd-block' %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "#{minimum_password_length} characters minimum" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirm new password", class: 'd-block' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= f.submit "Change my password" %>
<% end %>