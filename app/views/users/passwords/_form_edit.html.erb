<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render_floating_alert(resource.errors.full_messages) %>

  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, "New password", class: 'd-block' %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
          class: render_field_class(resource, :password)
          placeholder: "#{minimum_password_length} characters minimum", required: true %>
    <%= render_error_message_for(resource.errors[:password]) %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirm new password", class: 'd-block' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
          required: true, render_field_class(resource, :password_confirmation) %>
    <%= render_error_message_for(resource.errors[:password_confirmation]) %>
  </div>

  <%= f.submit "Change my password" %>
<% end %>