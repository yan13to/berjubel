<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render_floating_alert([flash.now[:alert]].compact) %>

  <div class="mb-3">
    <%= f.label :email, class: 'd-block' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <small>
        <%= link_to t('devise.shared.links.forgot_your_password'), new_password_path(resource_name) %>
      </small>
    <% end %>
    <%= f.password_field :password, autocomplete: "current-password", required: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <%= f.submit t(:sign_in) %>
<% end %>
