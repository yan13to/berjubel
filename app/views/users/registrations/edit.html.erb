<div class="card w-25" style="margin: 80px auto;">
  <div class="card-header">
    <h6 class="card-title">
      <%= t('devise.registrations.edit.title', resource_name) %>
    </h6>
  </div>
  <div class="card-body">
    <%= render 'form_edit' %>
  </div>
  <div class="card-footer">
    <p>
      <%= t('devise.registrations.edit.unhappy') %>&nbsp;
      <%= button_to t('devise.registrations.edit.cancel_my_account'),
            registration_path(resource_name),
            data: { confirm: t('devise.registrations.edit.are_you_sure') },
            method: :delete %>
    </p>

    <%= link_to t(:back), :back %>
  </div>
</div>
