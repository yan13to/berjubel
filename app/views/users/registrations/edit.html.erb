<%= render 'users/shared/header' %>
<div class="card w-25 mx-auto shake">
  <div class="card-header d-flex align-items-center">
    <h6 class="card-title mt-2 me-auto">
      <%= t('devise.registrations.edit.title', resource_name) %>
    </h6>
    <%= render_locale_selector('edit_user_registration_path') %>
  </div>
  <div class="card-body">
    <%= render 'form_edit' %>
  </div>
  <div class="card-footer">
    <p>
      <%= t('devise.registrations.edit.unhappy') %>&nbsp;
      <%= button_to t('devise.registrations.edit.cancel_my_account'),
            registration_path(resource_name),
            data: { confirm: t('devise.registrations.edit.are_you_sure') },
            method: :delete %>
    </p>

    <%= link_to t(:back), :back %>
  </div>
</div>
