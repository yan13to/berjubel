<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, class: 'd-block' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "#{resource.errors.messages[:email].present? ? 'is-invalid' : nil}" %>
    <div class="invalid-feedback">
      <%= resource.errors.messages[:email].join(', ') %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: 'd-block' %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum", class: "#{resource.errors.messages[:password].present? ? 'is-invalid' : nil}" %>
    <div class="invalid-feedback">
      <%= resource.errors.messages[:password].join(', ') %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: 'd-block' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "#{resource.errors.messages[:password_confirmation].present? ? 'is-invalid' : nil}" %>
    <div class="invalid-feedback">
      <%= resource.errors.messages[:password_confirmation].join(', ') %>
    </div>
  </div>

  <%= f.submit "Sign up" %>
<% end %>