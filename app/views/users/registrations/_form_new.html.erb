<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render_floating_alert(resource.errors.full_messages) %>

  <div class="mb-3 form-group">
    <%= f.label :email, class: 'd-block' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: render_field_class(resource, :email), required: true %>
    <%= render_error_message_for(resource, :email) %>
  </div>

  <div class="mb-3 form-group">
    <%= f.label :password, class: 'd-block' %>
    <%= f.password_field :password, autocomplete: "new-password",
          placeholder: t('devise.shared.minimum_password_length', count: @minimum_password_length),
          class: render_field_class(resource, :password), required: true %>
    <%= render_error_message_for(resource, :password) %>
  </div>

  <div class="mb-3 form-group">
    <%= f.label :password_confirmation, class: 'd-block' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: render_field_class(resource, :password_confirmation), required: true %>
    <%= render_error_message_for(resource, :password_confirmation) %>
  </div>

  <%= f.submit t(:sign_up), class: 'btn btn-secondary' %>
<% end %>