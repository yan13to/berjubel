<%- @page_title = [t(:edit), User::Profile.model_name.human].join(' | ') %>

<%= render_breadcrumbs([t(:home), t(:edit), User::Profile.model_name.human]) %>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= User::Profile.model_name.human %></h5>
    <div class="row">
      <div class="col-2">
        <%= image_tag current_user.avatar.variant(resize_to_limit: [180, 180]), class: 'rounded-circle' %>
      </div>
      <div class="col">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>