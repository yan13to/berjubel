<%- @page_title = User::Profile.model_name.human %>

<%= render_breadcrumbs([t(:home), User::Profile.model_name.human]) %>
<%= render_floating_alert([flash.now[:notice]].compact, :success) %>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <%= User::Profile.model_name.human %>
    </h5>
    <div class="row">
      <div class="col-2">
        <%= render_profiles_avatar %>
      </div>
      <div class="col">
        <%= render 'profile_tabs' %>
        <div class="tab-content">
          <div class="tab-pane pt-3 show active" id="profile">
            <%= render 'profile', profile: @profile %>
          </div>
          <div class="tab-pane pt-3" id="account">
            <%= render 'accounts/account' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>