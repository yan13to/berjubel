<%- @page_title = User::Profile.model_name.human %>

<%= render_breadcrumbs([t(:home), User::Profile.model_name.human]) %>
<%= render_floating_alert([flash.now[:notice]].compact, :success) %>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= User::Profile.model_name.human %></h5>
    <div class="row">
      <div class="col-2">
        <%= image_tag current_user.avatar.variant(resize_to_limit: [180, 180]), class: 'rounded-circle' %>
      </div>
      <div class="col">
        <%= render 'profile', profile: @profile %>
      </div>
    </div>
  </div>
</div>