<ul class="navbar-nav d-flex align-items-center ms-auto">
  <%- if signed_in? %>
    <li class="me-2">
      <%= render_locale_form %>
    </li>
    <li class="dropdown me-2">
      <%= link_to_remote_dropdown t(:my_store), stores_path, url: stores_path(per_page: 3) %>
      <ul class="dropdown-menu p-2">Loading...</ul>
    </li>
    <li class="dropdown me-2">
      <%= link_to '#', class: 'dropdown-toggle', 'data-bs-toggle': 'dropdown' do %>
        <%= render_user_avatar %>
        <%= render_user_name %>
      <% end %>
      <ul class="dropdown-menu dropdown-menu-dark">
        <li>
          <%= link_to User::Profile.model_name.human, profile_path, class: 'dropdown-item' %>
        </li>
        <li>
          <%= link_to User::Setting.model_name.human, setting_path, class: 'dropdown-item' %>
        </li>
        <li>
          <hr class="dropdown-divider">
        </li>
        <li>
          <%= link_to t(:logout), destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
        </li>
      </ul>
    </li>
    <% else %>
      <li>
        <%= link_to t(:sign_in), new_user_session_path %>
      </li>
    <% end %>
</ul>