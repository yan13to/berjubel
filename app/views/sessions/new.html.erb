<%- title 'Login to berjubel' -%>

<%- form_tag(sessions_url) do -%>
<%= content_tag(:p, flash[:notice]) unless flash[:notice].blank? %>
<p>
  <%= label_tag :username %> <br />
  <%= text_field_tag :username %>
</p>
<p>
  <%= label_tag :password %><br />
  <%= password_field_tag :password %>
</p>
<p>
  <label>
    <%= check_box_tag :remember_me %>
    Remember me ?
  </label>
</p>
<p>
  <%= submit_tag("Login") %> <%= link_to("Cancel") %>
</p>
<%- end -%>
<p>
  <%= link_to("or register", register_url) %>
</p>