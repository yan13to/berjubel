<div class="card">
  <div class="card-body">

    <div class="form-group mb-3">
      <h4><%= Category.human_attribute_name :name %></h4>
      <nav class="mt-3">
        <div class="nav nav-tabs" id="nav-name-tab" role="tablist">
          <% I18n.available_locales.each_with_index do |row, i| %>
            <button class="nav-link<%= ' active' if i.zero? %>"
              id="nav-name-<%= row %>-tab"
              data-bs-toggle="tab"
              data-bs-target="#nav-name-<%= row %>"
              type="button"
              role="tab"
              aria-controls="nav-name-<%= row %>"
              aria-selected="true">
              <%= I18n.t(row) %>
            </button>
          <% end %>
        </div>
      </nav>

      <div class="tab-content mt-3" id="nav-name-tab-content">
        <% I18n.available_locales.each_with_index do |row, i| %>
          <div class="tab-pane fade show<%= ' active' if i.zero? %>"
            id="nav-name-<%= row %>"
            role="tabpanel"
            aria-labelledby="nav-name-<%= row %>-tab">
            <%= @category.name[row.to_s] %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <h4><%= Category.human_attribute_name :description %></h4>
      <nav class="mt-3">
        <div class="nav nav-tabs" id="nav-description-tab" role="tablist">
          <% I18n.available_locales.each_with_index do |row, i| %>
            <button class="nav-link<%= ' active' if i.zero? %>"
              id="nav-description-<%= row %>-tab"
              data-bs-toggle="tab"
              data-bs-target="#nav-description-<%= row %>"
              type="button"
              role="tab"
              aria-controls="nav-description-<%= row %>"
              aria-selected="true">
              <%= I18n.t(row) %>
            </button>
          <% end %>
        </div>
      </nav>

      <div class="tab-content mt-3" id="nav-description-tab-content">
        <% I18n.available_locales.each_with_index do |row, i| %>
          <div class="tab-pane fade show<%= ' active' if i.zero? %>"
            id="nav-description-<%= row %>"
            role="tabpanel"
            aria-labelledby="nav-description-<%= row %>-tab">
            <%= simple_format @category.description[row.to_s] %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>