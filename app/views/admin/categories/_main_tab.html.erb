<ul class="nav nav-pills my-3" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link<%= ' active' if active_tab == 'home' %>"
      id="pills-home-tab"
      data-bs-toggle="pill"
      data-bs-target="#home"
      type="button"
      role="tab"
      aria-controls="home"
      aria-selected="<%= active_tab == 'home' %>">
      <%= t(:home) %>
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link<%= ' active' if active_tab == 'property' %>"
      id="pills-property-tab"
      data-bs-toggle="pill"
      data-bs-target="#property"
      data-bs-processor="admin/categories/property"
      type="button"
      role="tab"
      aria-controls="property"
      aria-selected="<%= active_tab == 'property' %>">
      <%= Property.model_name.human(count: 2) %>
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link position-relative<%= ' active' if active_tab == 'item' %>"
      id="pills-item-tab"
      data-bs-toggle="pill"
      data-bs-target="#item"
      data-bs-processor="admin/categories/item"
      data-bs-url="<%= admin_category_path(@category, part: :item, format: :js) %>"
      type="button"
      role="tab"
      aria-controls="item"
      aria-selected="<%= active_tab == 'property' %>">
      <%= Item.model_name.human(count: 2) %>
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
        99+
        <span class="visually-hidden">unread messages</span>
      </span>
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link<%= ' active' if active_tab == 'setting' %>"
      id="pills-setting-tab"
      data-bs-toggle="pill"
      data-bs-target="#setting"
      data-bs-processor="admin/categories/setting"
      type="button"
      role="tab"
      aria-controls="setting"
      aria-selected="<%= active_tab == 'setting' %>">
      Settings
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link<%= ' active' if active_tab == 'history' %>"
      id="pills-history-tab"
      data-bs-toggle="pill"
      data-bs-target="#history"
      data-bs-processor="admin/categories/history"
      type="button"
      role="tab"
      aria-controls="history"
      aria-selected="<%= active_tab == 'history' %>">
      History
    </button>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade<%= ' show active' if active_tab == 'home' %>" id="home" role="tabpanel" aria-labelledby="home-tab">
    <%= render 'home' %>
  </div>
  <div class="tab-pane fade<%= ' show active' if active_tab == 'property' %>" id="property" role="tabpanel" aria-labelledby="property-tab">
    <%= render 'placeholder' %>
  </div>
  <div class="tab-pane fade<%= ' show active' if active_tab == 'item' %>" id="item" role="tabpanel" aria-labelledby="item-tab">
    <%= render 'placeholder' %>
  </div>
  <div class="tab-pane fade<%= ' show active' if active_tab == 'setting' %>" id="setting" role="tabpanel" aria-labelledby="setting-tab">
    <%= render 'placeholder' %>
  </div>
  <div class="tab-pane fade<%= ' show active' if active_tab == 'history' %>" id="history" role="tabpanel" aria-labelledby="history-tab">
    <%= render 'placeholder' %>
  </div>
</div>