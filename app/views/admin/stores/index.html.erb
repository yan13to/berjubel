<% render_admin_page_title(Store.model_name.human(count: 2)) %>
<% render_admin_main_nav(:stores) %>
<% render_floating_alert([flash.now[:notice]].compact, :success) %>
<% render_admin_breadcrumbs([link_to(t(:home), admin_root_path), Store.model_name.human(count: 2)]) %>

<% content_for :search_form do %>
  <form>
    <input type="search" class="form-control border-bottom">
  </form>
<% end %>

<div class="d-flex justify-content-between align-items-center my-2">
  <h3><%= Store.model_name.human(count: 2) %></h3>
  <div class="btn-group" role="group" aria-label="Actions">
    <button class="btn btn-secondary">
      <i class="bi bi-search"></i>
    </button>
    <button class="btn btn-danger">
      <i class="bi bi-caret-down"></i>
    </button>
    <button class="btn btn-primary">
      <i class="bi bi-grid"></i>
    </button>
    <%= link_to new_admin_store_path, class: 'btn btn-success' do %>
      <i class="bi bi-plus"></i>
    <% end %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <%= render 'tr_head' %>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <%= render 'tr_body', store: store %>
    <% end %>
  </tbody>
</table>

<%= render_records_navigation @stores %>
