<%- @page_title = [t(:edit), t(:account)].join(' | ') %>

<%= render_breadcrumbs([t(:home), t(:edit), t(:account)]) %>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <%= t(:account) %>
    </h5>
    <div class="row">
      <div class="col-2">
        <%= render_profiles_avatar %>
      </div>
      <div class="col">
        <%= render 'profile_tabs' %>
        <div class="pt-3">
          <div class="d-flex">
            <div class="flex-grow-1">
              <%= render 'form' %>
            </div>
            <div>
              <%= link_to t(:cancel), account_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>