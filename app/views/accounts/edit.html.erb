<%- @page_title = [t(:edit), t(:account)].join(' | ') %>

<%= render_breadcrumbs([t(:home), t(:edit), t(:account)]) %>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">
      <%= t(:account) %>
    </h5>
    <div class="row">
      <div class="col-2">
        <%= render_profiles_avatar %>
      </div>
      <div class="col">
        <%= render 'profile_tabs', active: 'account' %>
        <div class="tab-content">
          <div class="tab-pane pt-3 show active" id="profile">
            <%= render 'form' %>
          </div>
          <div class="tab-pane pt-3" id="account">
            <%- if current_user.profile %>
              <%= render 'profiles/profile', profile: current_user.profile %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>